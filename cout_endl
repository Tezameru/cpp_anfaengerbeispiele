#include <iostream>
using namespace std;

int main ()
    {
    cout << "Hello World!";                                 //(1)
    cout << endl;
    cout << "Das hier ist ein weiterer Text!" << endl;      //(2)
    return 0;                                               //(3)
}

//(1)   cout = gibt durch << angegebene ausgabe wieder, zeichenstrings müssen in " " gesetzt werden, wird mit ; beendet
//(2)   endl = gibt ende der zeile an, springt also im kompilierten programm in neue zeile über
//(3)   return 0; = benötigt damit das progamm weiß das es beendet ist
